pkgname=ttf-ironmaiden-fonts
pkgver=1
pkgrel=2
pkgdesc="Iron Maiden fonts collection"
arch=('any')
url="http://www.freewebs.com/videoarchive/fonts.html"
license=('unknown')
depends=('fontconfig' 'xorg-font-utils')
install=ttf.install
source=(http://www.freewebs.com/videoarchive/fonts/Eddie.ttf 
	Iron_Maiden.ttf::http://www.freewebs.com/videoarchive/fonts/Iron\ Maiden.ttf
	Metal_Lord.ttf::http://www.freewebs.com/videoarchive/fonts/Metal\ Lord.ttf
	http://www.freewebs.com/videoarchive/fonts/Purgatory.ttf
	Life_and_Death.ttf::http://www.freewebs.com/videoarchive/fonts/Life\ and\ Death.ttf
	http://www.freewebs.com/videoarchive/fonts/Balmoral.ttf
	Flare_Sherif.ttf::http://www.freewebs.com/videoarchive/fonts/Flare\ Sherif.ttf
	http://www.freewebs.com/videoarchive/fonts/Flatbrush.ttf
	Cloister_Black.ttf::http://www.freewebs.com/videoarchive/fonts/Cloister\ Black.ttf
	Kunstler_Script.ttf::http://www.freewebs.com/videoarchive/fonts/Kunstler\ Script.ttf
	http://www.freewebs.com/videoarchive/fonts/Edda.ttf
	Judas_Caps.ttf::http://www.freewebs.com/videoarchive/fonts/Judas\ Caps.ttf
	http://www.freewebs.com/videoarchive/fonts/LcdD.ttf
	Steves_Handwriting.ttf::http://www.freewebs.com/videoarchive/fonts/Steves\ Handwriting.ttf
	The_Font_Of_The_Beast.ttf::http://www.freewebs.com/videoarchive/fonts/The\ Font\ Of\ The\ Beast.ttf
	Monotype_Corsiva.ttf::http://www.freewebs.com/videoarchive/fonts/Monotype\ Corsiva.ttf
	http://www.freewebs.com/videoarchive/fonts/Trooper.ttf
	Arcana_GMM_Std_Manuscript.ttf::http://www.freewebs.com/videoarchive/fonts/Arcana\ GMM\ Std\ Manuscript.ttf
	Celtic_Garamond_the_2nd.ttf::http://www.freewebs.com/videoarchive/fonts/Celtic\ Garamond\ the\ 2nd.ttf
	Bank_Gothic.ttf::http://www.freewebs.com/videoarchive/fonts/Bank\ Gothic.ttf)

build() {
  cd ${srcdir}
  mkdir -p ${pkgdir}/usr/share/fonts/TTF
  install -m644 Eddie.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Iron_Maiden.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Metal_Lord.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Purgatory.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Life_and_Death.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Balmoral.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Flare_Sherif.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Flatbrush.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Cloister_Black.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Kunstler_Script.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Edda.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Judas_Caps.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 LcdD.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Steves_Handwriting.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 The_Font_Of_The_Beast.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Monotype_Corsiva.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Trooper.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Arcana_GMM_Std_Manuscript.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Celtic_Garamond_the_2nd.ttf ${pkgdir}/usr/share/fonts/TTF/
  install -m644 Bank_Gothic.ttf ${pkgdir}/usr/share/fonts/TTF/
}

